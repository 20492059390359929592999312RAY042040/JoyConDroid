<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <Button
        android:id="@+id/menu_left_joycon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_menu_left_joycon"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showLeftJoyCon"
        android:textColor="?attr/colorOnBackground"
        android:text="@string/left_joycon"
        app:layout_constraintBottom_toTopOf="@id/menu_pro_controller"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/menu_right_joycon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_right_joycon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_menu_right_joycon"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showRightJoyCon"
        android:textColor="?attr/colorOnBackground"
        android:text="@string/right_joycon"
        app:layout_constraintBottom_toTopOf="@id/menu_custom_ui"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_left_joycon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_pro_controller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_menu_pro_controller"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showProController"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="4dp"
        android:textColor="?attr/colorOnBackground"
        android:text="@string/pro_controller"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/menu_custom_ui"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_left_joycon" />

    <Button
        android:id="@+id/menu_custom_ui"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_menu_pro_controller"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showCustomUi"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="2dp"
        android:text="@string/custom_ui"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_pro_controller"
        app:layout_constraintTop_toBottomOf="@+id/menu_right_joycon" />


</androidx.constraintlayout.widget.ConstraintLayout>