<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:background="@color/joycon_red">

    <Button
        android:id="@+id/menu_left_joycon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/ic_menu_left_joycon"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showLeftJoyCon"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:text="@string/left_joycon"
        app:layout_constraintBottom_toTopOf="@id/menu_pro_controller"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/menu_right_joycon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_right_joycon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/ic_menu_right_joycon"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showRightJoyCon"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:text="@string/right_joycon"
        app:layout_constraintBottom_toTopOf="@id/menu_remove_ad"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_left_joycon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_pro_controller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/ic_menu_pro_controller"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="showProController"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:text="@string/pro_controller"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@id/menu_remove_ad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_left_joycon" />

    <Button
        android:id="@+id/menu_remove_ad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/ic_menu_remove_ads"
        android:gravity="bottom|center"
        android:maxLines="1"
        android:onClick="removeAds"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="2dp"
        android:text="@string/remove_ads"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_pro_controller"
        app:layout_constraintTop_toBottomOf="@+id/menu_right_joycon" />


</androidx.constraintlayout.widget.ConstraintLayout>