<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/switch_logo"
    android:orientation="vertical"
    tools:context=".JoystickMappingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainMenuToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:logo="@drawable/ic_procontroller_icon"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/map_buttons"
        app:titleMarginStart="32dp" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/border"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Push Right JoyStick Up"/>

    <ImageView
        android:id="@+id/to_do_action"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_stick_up"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/border"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text=""/>

</LinearLayout>